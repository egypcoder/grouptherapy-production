{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "grouptherapyeg.com" }],
      "destination": "https://www.grouptherapyeg.com/$1",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/api/sitemap-pages", "destination": "/api/sitemap?kind=pages" },
    { "source": "/api/sitemap-posts", "destination": "/api/sitemap?kind=posts" },
    { "source": "/api/sitemap-releases", "destination": "/api/sitemap?kind=releases" },
    { "source": "/api/sitemap-events", "destination": "/api/sitemap?kind=events" },
    { "source": "/api/sitemap-artists", "destination": "/api/sitemap?kind=artists" },
    { "source": "/api/sitemap-videos", "destination": "/api/sitemap?kind=videos" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/__ssr-template", "destination": "/index.html" },
    { "source": "/index.html", "destination": "/api/ssr" },
    { "source": "/favicon.ico", "destination": "/favicon.ico" },
    { "source": "/favicon.png", "destination": "/favicon.png" },
    { "source": "/manifest.json", "destination": "/manifest.json" },
    { "source": "/robots.txt", "destination": "/api/robots" },
    { "source": "/sitemap.xml", "destination": "/api/sitemap" },
    { "source": "/sitemap-pages.xml", "destination": "/api/sitemap?kind=pages" },
    { "source": "/sitemap-posts.xml", "destination": "/api/sitemap?kind=posts" },
    { "source": "/sitemap-releases.xml", "destination": "/api/sitemap?kind=releases" },
    { "source": "/sitemap-events.xml", "destination": "/api/sitemap?kind=events" },
    { "source": "/sitemap-artists.xml", "destination": "/api/sitemap?kind=artists" },
    { "source": "/sitemap-videos.xml", "destination": "/api/sitemap?kind=videos" },
    { "source": "/(.*)", "destination": "/api/ssr?path=$1" }
  ],
  "headers": [
    {
      "source": "/__ssr-template",
      "headers": [
        { "key": "X-Robots-Tag", "value": "noindex, nofollow" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
